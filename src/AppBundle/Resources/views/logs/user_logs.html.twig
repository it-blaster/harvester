{% extends 'AppBundle::layout.html.twig' %}

{% block body %}
    <h1 class="page-header">{{ user.getUserName }}'s logs</h1>

    <div class="table-responsive">
        Показаны последние 20 логов:
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Uri</th>
                <th>Date time</th>
            </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                <tr>
                    <td>{{ log.getTitle }}</td>
                    <td><a href="{{ log.getUri }}" target="_blank">{{ log.getUri }}</a></td>
                    <td>{{ log.getDateTimeFormat }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock body %}